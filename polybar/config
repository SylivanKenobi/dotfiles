label-foreground = ${colors.cursor}
label-background = ${colors.selection_background}
label-warn-foreground = ${colors.color1}
ramp-foreground = ${colors.cursor}
ramp-background = ${colors.selection_background}
ramp-0 = "  "
ramp-1 = "  "
ramp-2 = "  "
ramp-3 = "  "
ramp-4 = "  "

# Date
[module/date]
